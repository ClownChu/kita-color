{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["src/*"]
    },
    "types": [
      "node",
      "chai",
      "mocha"
    ],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  }
}